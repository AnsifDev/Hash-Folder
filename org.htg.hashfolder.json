{
    "id": "org.htg.hashfolder",
    "runtime": "org.gnome.Platform",
    "runtime-version": "44",
    "sdk": "org.gnome.Sdk",
    "command": "app",
    "modules": [ 
        {
            "name": "git",
            "buildsystem": "simple",
            "build-commands": [
                "cp -r * /app"
            ],
            "sources": [
                {
                    "type":"archive",
                    "url": "https://ansifdev.github.io/Hash-Folder/dependencies/git.zip",
                    "sha512": "5a0c9b9b5713a59ffee95281e5466c9a007119d098ba68767cd3e7d6ea57aba811237a2679dc8dbb7ef7ae0119a3486dac5e8e7aa187bdd9a44c76b4a27696c5"
                }
            ]
        },
        {
            "name": "gh",
            "buildsystem": "simple",
            "build-commands": [
                "cp -r * /app"
            ],
            "sources": [
                {
                    "type":"archive",
                    "url": "https://github.com/cli/cli/releases/download/v2.34.0/gh_2.34.0_linux_amd64.tar.gz",
                    "sha256": "056c45c510ca77ec7e492023e1aa79c078b679932b6202188b7f5abd914df911"
                }
            ]
        },
        {
            "name": "Application", 
            "buildsystem": "meson",
            "modules": [
                {
                    "name": "vte",
                    "buildsystem": "meson",
                    "config-opts": [
                        "-Dgtk3=false",
                        "-Dglade=false",
                        "-Dgtk4=true"
                    ],
                    "sources": [
                        {
                            "type": "git",
                            "branch": "vte-0-72",
                            "url": "https://github.com/GNOME/vte.git"
                        }
                    ]
                }
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ],
    "finish-args": [
		"--socket=wayland",
		"--socket=x11",
		"--socket=fallback-x11",
		"--share=ipc",
		"--device=dri",
        "--share=network",
        "--socket=pulseaudio",
        "--socket=ssh-auth",
        "--filesystem=home"
	]
}