<?xml version="1.0" encoding="UTF-8"?>
<interface>
	<object class="HtgActivityPage" id="root">
		<property name="title-bar">
			<object class="AdwHeaderBar">
				<property name="centering-policy">strict</property>
				<property name="title-widget">
					<object class="AdwViewSwitcherTitle" id="title">
						<property name="stack">viewstack</property>
						<property name="title">Hash Folder</property>
					</object>
				</property>
				<child>
					<object class="GtkButton" id="repo_page_back">
						<property name="icon-name">go-previous-symbolic</property>
						<property name="visible">false</property>
					</object>
				</child>
				<child type="start">
					<object class="GtkButton" id="logout_btn">
						<property name="icon-name">logout-account-symbolic</property>
						<property name="tooltip-text">Logout</property>
					</object>
				</child>
				<!-- <style><class name="devel"/></style> -->
			</object>
		</property>
		<child>
			<object class="GtkProgressBar" id="progress">
				<style><class name="osd"/></style>
			</object>
		</child>
		<child>
			<object class="AdwViewStack" id="viewstack">
				<property name="vexpand">True</property>
				<child>
					<object class="AdwViewStackPage">
						<property name="title">Home</property>
						<property name="name">home</property>
						<property name="icon-name">user-home-symbolic</property>
						<property name="child">
							<object class="AdwClamp">
								<child>
									<object class="GtkBox">
										<property name="spacing">16</property>
										<property name="orientation">vertical</property>
										<property name="margin-start">16</property>
										<property name="margin-end">16</property>
										<property name="margin-top">16</property>
										<property name="margin-bottom">16</property>
										<child>
											<object class="AdwAvatar" id="avt">
												<property name="size">100</property>
												<property name="margin-top">16</property>
											</object>
										</child>
										<child>
											<object class="GtkLabel" id="acc_name">
												<property name="label">Welcome AnsifDev</property>
												<style><class name="title-1"/></style>
											</object>
										</child>
										<child>
											<object class="AdwPreferencesGroup">
												<property name="title">Account Configurations</property>
												<child>
													<object class="AdwActionRow">
														<property name="title">Use SSH Port 443</property>
														<property name="subtitle">ASIET Lab Systems? Turn this on for cloning purpose</property>
														<child>
															<object class="GtkSwitch" id="ssh_port">
																<property name="vexpand">false</property>
																<property name="valign">center</property>
															</object>
														</child>
														<property name="activatable-widget">ssh_port</property>
													</object>
												</child>
												<child>
													<object class="AdwActionRow" id="def_folder">
														<property name="title">Repository Download Location</property>
														<property name="subtitle">/home/ansif/AnsifDev</property>
														<style><class name="property"/></style>
														<child>
															<object class="GtkButton" id="clear_folder">
																<style><class name="flat"/></style>
																<property name="visible">false</property>
																<property name="margin-top">8</property>
																<property name="margin-bottom">8</property>
																<property name="tooltip-text">Clear folder</property>
																<property name="icon-name">eraser5-symbolic</property>
															</object>
														</child>
														<child>
															<object class="GtkButton" id="open_folder">
																<style><class name="flat"/></style>
																<property name="margin-top">8</property>
																<property name="margin-bottom">8</property>
																<property name="tooltip-text">Set folder</property>
																<property name="icon-name">folder-open-symbolic</property>
															</object>
														</child>
														<property name="activatable-widget">open_folder</property>
													</object>
												</child>
											</object>
										</child>
										<child>
											<object class="GtkBox">
												<style><class name="linked"/></style>
												<property name="hexpand">false</property>
												<property name="vexpand">true</property>
												<property name="halign">center</property>
												<property name="valign">end</property>
												<property name="homogeneous">true</property>
												<property name="width-request">200</property>
												<child>
													<object class="GtkToggleButton" id="theme_auto">
														<property name="tooltip-text">Follow System</property>
														<property name="active">true</property>
														<property name="icon-name">dark-mode-symbolic</property>
													</object>
												</child>
												<child>
													<object class="GtkToggleButton" id="theme_light">
														<property name="tooltip-text">Light Theme</property>
														<property name="icon-name">display-brightness-medium-symbolic</property>
														<property name="group">theme_auto</property>
													</object>
												</child>
												<child>
													<object class="GtkToggleButton" id="theme_dark">
														<property name="tooltip-text">Dark Theme</property>
														<property name="icon-name">moon-outline-symbolic</property>
														<property name="group">theme_auto</property>
													</object>
												</child>
											</object>
										</child>
									</object>
								</child>				
							</object>
						</property>
					</object>
				</child>
				<child>
					<object class="AdwViewStackPage">
						<property name="title">Repositories</property>
						<property name="name">repos</property>
						<property name="icon-name">folder-symbolic</property>
						<property name="child">
							<object class="AdwBin" id="repo_container"></object>
						</property>
					</object>
				</child>
				<child>
					<object class="AdwViewStackPage">
						<property name="title">Devices</property>
						<property name="name">devices</property>
						<property name="icon-name">computer-symbolic</property>
						<property name="child">
							<object class="AdwBin" id="devices_container">
								<child>
									<object class="AdwStatusPage">
										<property name="icon-name">settings-symbolic</property>
										<property name="title">Feature Under Development</property>
										<property name="description">Feature will be available in the next release</property>
									</object>
								</child>
							</object>
						</property>
					</object>
				</child>
			</object>
		</child>
		<child>
			<object class="AdwViewSwitcherBar">
				<property name="stack">viewstack</property>
				<binding name="reveal">
					<lookup name="title-visible">title</lookup>
				</binding>
			</object>
		</child>
	</object>
</interface>