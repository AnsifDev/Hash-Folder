<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="DialogSSH" parent="AdwWindow">
    <property name="default-width">500</property>
    <property name="modal">true</property>
    <property name="resizable">false</property>
    <property name="deletable">false</property>
    <property name="title">SSH Key Setup</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">8</property>
        <child>
          <object class="AdwHeaderBar">
            <child type="end">
              <object class="GtkButton" id="create">
                <property name="label">Create</property>
                <property name="sensitive">false</property>
                <signal name="clicked" handler="on_button_clicked"/>
                <style>
                  <class name="suggested-action"/>
                </style>
              </object>
            </child>
            <child type="start">
              <object class="GtkButton" id="cancel">
                <property name="label">Cancel</property>
                <signal name="clicked" handler="on_button_clicked"/>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwAvatar">
            <property name="size">100</property>
            <property name="icon-name">dialog-password-symbolic</property>
            <property name="margin-top">32</property>
            <property name="margin-bottom">8</property>
          </object>
        </child>
        <child>
          <object class="GtkLabel">
            <property name="label">Create a password for your SSH Key</property>
            <style>
              <class name="title-1"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkListBox">
            <property name="margin-top">24</property>
            <property name="margin-bottom">8</property>
            <property name="margin-start">12</property>
            <property name="margin-end">12</property>
            <property name="selection-mode">none</property>
            <style>
              <class name="boxed-list"/>"
            </style>
            <child>
              <object class="HashtagEntryRow" id="en_keyname">
                <property name="title">Keyname for Git Account</property>
                <signal name="changed" handler="on_text_changed"/>
              </object>
            </child>
            <child>
              <object class="HashtagPasswordEntryRow" id="en_pass">
                <property name="title">Password</property>
                <signal name="changed" handler="on_text_changed"/>
              </object>
            </child>
            <child>
              <object class="HashtagPasswordEntryRow" id="en_repass">
                <property name="title">Retype Password</property>
                <signal name="changed" handler="on_text_changed"/>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkBox" id="warning_layout">
            <property name="margin-bottom">24</property>
            <property name="margin-start">12</property>
            <property name="margin-end">12</property>
            <property name="spacing">8</property>
            <property name="orientation">horizontal</property>
            <style>
              <class name="card"/>
            </style>
            <child>
              <object class="GtkImage">
                <property name="icon-name">dialog-warning-symbolic</property>
                <property name="margin-start">16</property>
                <property name="margin-bottom">16</property>
                <property name="margin-top">16</property>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="warning_label">
                <property name="label">Filename must be atleast 5 characters</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
