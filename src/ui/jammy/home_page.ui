<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="HomePage" parent="GtkBox">
    <property name="width-request">300</property>
    <property name="height-request">250</property>
    <property name="orientation">vertical</property>
    <property name="margin-top">24</property>
    <property name="margin-bottom">24</property>
    <property name="margin-start">12</property>
    <property name="margin-end">12</property>
    <property name="spacing">8</property>
    <child>
      <object class="AdwAvatar" id="avt">
        <property name="text">Ansif</property>
        <property name="size">100</property>
        <property name="show-initials">true</property>
        <property name="margin-top">32</property>
        <property name="margin-bottom">8</property>
        <property name="margin-start">8</property>
      </object>
    </child>
    <child>
      <object class="GtkLabel" id="greet">
        <property name="label">Hey Ansif</property>
        <style>
          <class name="title-1"/>
        </style>
      </object>
    </child>
    <child>
      <object class="AdwPreferencesGroup">
        <property name="title">General Configuration</property>
        <property name="margin-top">8</property>
        <property name="margin-bottom">4</property>
        <style>
          <class name="boxed-list"/>
        </style>
        <child>
          <object class="AdwActionRow">
            <property name="title">Stay Logged In</property>
            <property name="selectable">false</property>
            <child>
              <object class="GtkSwitch" id="stay_logged">
                <property name="margin-top">8</property>
                <property name="margin-bottom">8</property>
                <property name="halign">end</property>
                <property name="valign">center</property>
                <property name="margin-end">4</property>
                <property name="active">false</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwActionRow">
            <property name="title">Use SSH Port 443</property>
            <property name="subtitle">Some computers may block ssh repo cloning on its default port settings</property>
            <property name="selectable">false</property>
            <child>
              <object class="GtkSwitch" id="use_port">
                <property name="margin-top">8</property>
                <property name="margin-bottom">8</property>
                <property name="halign">end</property>
                <property name="valign">center</property>
                <property name="margin-end">4</property>
                <property name="active">false</property>
                <signal name="state-set" handler="on_switch_state_changed"/>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwActionRow" id="row_email">
            <property name="title" translatable="yes">Git User Email ID</property>
            <property name="subtitle" translatable="yes">[Not set]</property>
            <child>
              <object class="GtkButton" id="btn_email">
                <style>
                  <class name="flat"/>
                </style>
                <property name="label">Set Email</property>
                <property name="icon-name">document-edit-symbolic</property>
                <property name="margin-top">8</property>
                <property name="halign">start</property>
                <property name="margin-bottom">8</property>
                <signal name="clicked" handler="on_button_clicked"/>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="AdwPreferencesGroup" id="repo_grp">
        <property name="title">Repository Clone Folder</property>
        <property name="margin-top">8</property>
        <property name="margin-bottom">4</property>
        <child>
          <object class="HtgCheckButtonRow" id="default_folder">
            <property name="title">Use Default Folder</property>
          </object>
        </child>
        <child>
          <object class="HtgCheckButtonRow" id="custom_folder">
            <property name="title">Use Custom Folder</property>
          </object>
        </child>
        <child>
          <object class="HtgCheckButtonRow" id="ask_folder">
            <property name="title">Ask Each Time</property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="AdwPreferencesGroup" id="repo_filter_grp">
        <property name="title">Repository Filter and Search</property>
        <property name="margin-top">4</property>
        <property name="margin-bottom">4</property>
        <child>
          <object class="HtgCheckButtonRow" id="private_first">
            <property name="title">Sort Based on Visiblity</property>
          </object>
        </child>
        <child>
          <object class="HtgCheckButtonRow" id="local_first">
            <property name="title">Show Downloaded First</property>
          </object>
        </child>
        <child>
          <object class="HtgEntryRow" id="en_search">
            <property name="title">Search Repository</property>
            <property name="show-apply-button">true</property>
            <signal name="apply" handler="on_button_clicked"/>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="HtgPreferencesGroup" id="repo_listview">
        <property name="margin-top">4</property>
        <property name="margin-bottom">4</property>
          <property name="title">Repositories</property>
          <property name="header-suffix">
            <object class="GtkBox">
              <property name="orientation">horizontal</property>
              <property name="spacing">4</property>
              <property name="margin-end">14</property>
              <child>
                <object class="GtkButton" id="refresh_repo">
                  <property name="label" translatable="yes">Refresh Repository Data</property>
                  <property name="icon-name">view-refresh-symbolic</property>
                  <signal name="clicked" handler="on_button_clicked"/>
                  <style>
                    <class name="flat"/>
                  </style>
                </object>
              </child>
              <child>
                <object class="GtkButton" id="add_repo">
                  <property name="label" translatable="yes">Setup New Repository</property>
                  <property name="icon-name">list-add-symbolic</property>
                  <signal name="clicked" handler="on_button_clicked"/>
                  <style>
                    <class name="flat"/>
                  </style>
                </object>
              </child>
            </object>
          </property>
      </object>
    </child>
  </template>
</interface>
